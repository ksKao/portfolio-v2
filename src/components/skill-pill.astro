---
interface Props {
  name: string;
  assetId: string;
}

const { name, assetId } = Astro.props;
---

<div class="bg-primary/10 flex w-fit items-center gap-2 rounded-full px-4 py-2">
  <img
    src={`${import.meta.env.PUBLIC_DIRECTUS_URL}/assets/${assetId}/${name}.svg`}
    alt={name}
    class="h-4"
  />
  <p class="text-xs md:text-sm">{name}</p>
</div>
