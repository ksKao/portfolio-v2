---
import type { DirectusContentData } from "@lib/directus";
import PillButton from "./pill-button.astro";

interface Props {
  data: NonNullable<DirectusContentData["translations"]>[number];
}

const { data } = Astro.props;

if (typeof data === "string") {
  throw new Error(`Invalid string type for content translations`);
}

// put this here so that tailwind recognizes the class name
("text-primary");
---

<section
  id="home"
  class="flex h-svh flex-col items-center justify-center overflow-visible py-16"
>
  <h1
    class="font-space text-3xl font-bold md:w-2/3 md:self-start md:text-6xl"
    set:html={data.jumbotron_header_html}
  />
  <div class="mt-4 md:mt-16 md:w-1/2 md:self-end">
    <p class="text-muted">
      {data.jumbotron_description}
    </p>
    <PillButton class="mt-6 w-fit self-start">View Projects</PillButton>
  </div>
</section>
