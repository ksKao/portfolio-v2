---
import { getDirectusProjects, type DirectusContentData } from "@lib/directus";
import { ensureObject } from "@lib/utils";
import SkillPill from "./skill-pill.astro";
import PillLink from "./pill-link.astro";

interface Props {
  data: NonNullable<DirectusContentData["translations"]>[number];
  locale: string;
}

const data = ensureObject(Astro.props.data);

const projects = await getDirectusProjects(Astro.props.locale);
---

<section
  id="projects"
  class="mt-24 flex min-h-svh flex-col justify-center gap-6 md:gap-20"
>
  <h2 class="font-space text-center text-4xl font-bold md:text-6xl">
    {data.projects_header}
  </h2>
  <div class="flex flex-col gap-8">
    {
      projects.map((project) => (
        <div class="bg-card mx-auto flex w-full max-w-full flex-col gap-4 rounded-2xl p-4 lg:w-350 lg:flex-row lg:p-8">
          <img
            src={`${import.meta.env.PUBLIC_DIRECTUS_URL}/assets/${project.mockup}`}
            alt={`${project.name} Mockup`}
            class="aspect-square rounded-lg object-cover lg:w-1/2"
          />
          <div class="bg-background flex aspect-auto flex-col justify-between gap-8 rounded-2xl p-4 lg:aspect-square lg:w-1/2 lg:p-8">
            <div class="flex flex-wrap gap-2">
              {project.skills.map((skill) => (
                <SkillPill name={skill.name} assetId={skill.icon.toString()} />
              ))}
            </div>
            <div class="flex flex-col gap-4 lg:gap-8">
              <div class="flex items-center gap-4">
                <div class="bg-primary/10 h-12 w-12 rounded-md p-2">
                  <img
                    src={`${import.meta.env.PUBLIC_DIRECTUS_URL}/assets/${project.logo.toString()}`}
                    alt={`${project.name} Logo`}
                    class="h-full w-full"
                  />
                </div>
                <h3 class="font-space text-2xl font-bold">{project.name}</h3>
              </div>
              <p class="text-muted">{project.translations.description}</p>
              <div class="flex gap-4">
                <PillLink
                  class="flex h-fit w-fit items-center gap-2 px-4 py-2 text-sm"
                  href={project.project_link}
                  target="_blank"
                >
                  <span>{data.link_to_project_text}</span>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    height="16px"
                    viewBox="0 -960 960 960"
                    width="16px"
                    fill="currentColor"
                  >
                    <path d="M216-144q-29.7 0-50.85-21.15Q144-186.3 144-216v-528q0-29.7 21.15-50.85Q186.3-816 216-816h264v72H216v528h528v-264h72v264q0 29.7-21.15 50.85Q773.7-144 744-144H216Zm171-192-51-51 357-357H576v-72h240v240h-72v-117L387-336Z" />
                  </svg>
                </PillLink>
                <PillLink
                  class="flex h-fit w-fit items-center gap-2 px-4 py-2 text-sm"
                  href={project.github_link}
                  target="_blank"
                >
                  <span>{data.link_to_source_code_text}</span>
                  <svg viewBox="0 0 128 128" width="16px" height="16px">
                    <g fill="currentColor">
                      <>
                        <path
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M64 5.103c-33.347 0-60.388 27.035-60.388 60.388 0 26.682 17.303 49.317 41.297 57.303 3.017.56 4.125-1.31 4.125-2.905 0-1.44-.056-6.197-.082-11.243-16.8 3.653-20.345-7.125-20.345-7.125-2.747-6.98-6.705-8.836-6.705-8.836-5.48-3.748.413-3.67.413-3.67 6.063.425 9.257 6.223 9.257 6.223 5.386 9.23 14.127 6.562 17.573 5.02.542-3.903 2.107-6.568 3.834-8.076-13.413-1.525-27.514-6.704-27.514-29.843 0-6.593 2.36-11.98 6.223-16.21-.628-1.52-2.695-7.662.584-15.98 0 0 5.07-1.623 16.61 6.19C53.7 35 58.867 34.327 64 34.304c5.13.023 10.3.694 15.127 2.033 11.526-7.813 16.59-6.19 16.59-6.19 3.287 8.317 1.22 14.46.593 15.98 3.872 4.23 6.215 9.617 6.215 16.21 0 23.194-14.127 28.3-27.574 29.796 2.167 1.874 4.097 5.55 4.097 11.183 0 8.08-.07 14.583-.07 16.572 0 1.607 1.088 3.49 4.148 2.897 23.98-7.994 41.263-30.622 41.263-57.294C124.388 32.14 97.35 5.104 64 5.104z"
